<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InvoiceApp</title>
    <script src="https://cdn.tailwindcss.com/3.4.3"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InvoiceApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="bg-white border-b shadow mb-6">
            <div class="container mx-auto flex flex-wrap items-center justify-between py-4 px-6">
                <a class="text-xl font-bold text-gray-900" asp-area="" asp-page="/Index">InvoiceApp</a>
                <div class="flex space-x-4">
                    <a class="text-gray-700 hover:text-blue-600 font-medium" asp-area="" asp-page="/Index">Home</a>
                    <a class="text-gray-700 hover:text-blue-600 font-medium" asp-area="" asp-page="/Privacy">Privacy</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t text-gray-600 text-center py-4">
        &copy; 2025 - InvoiceApp - <a asp-area="" asp-page="/Privacy" class="underline">Privacy</a>
    </footer>

    <!-- Alpine.js and site scripts -->
    <script src="~/lib/alpinejs/dist/cdn.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Chatbot Component -->
    <div id="chatbot" x-data="chatbot" class="fixed bottom-4 right-4 z-50">
        <!-- Chat Button -->
        <button 
            x-show="!chatOpen" 
            x-on:click="toggleChat" 
            class="bg-blue-600 hover:bg-blue-700 text-white rounded-full p-4 shadow-lg flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
            </svg>
        </button>

        <!-- Chat Window -->
        <div 
            x-show="chatOpen" 
            x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0 transform scale-90"
            x-transition:enter-end="opacity-100 transform scale-100"
            x-transition:leave="transition ease-in duration-300"
            x-transition:leave-start="opacity-100 transform scale-100"
            x-transition:leave-end="opacity-0 transform scale-90"
            class="bg-white rounded-lg shadow-xl w-80 sm:w-96 flex flex-col overflow-hidden"
            style="height: 500px;">
            
            <!-- Chat Header -->
            <div class="bg-blue-600 text-white px-4 py-3 flex justify-between items-center">
                <h3 class="font-medium">Chat Assistant</h3>
                <button x-on:click="toggleChat" class="text-white hover:text-gray-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                </button>
            </div>
            
            <!-- Chat Messages -->
            <div class="flex-1 p-4 overflow-y-auto" id="chat-messages">
                <template x-for="(message, index) in messages.filter(m => m.role === 'user' || (m.role === 'assistant' && m.contents[0].$type === 'text'))" x-bind:key="index">
                    <div x-bind:class="message.role === 'user' ? 'flex justify-end mb-3' : 'flex justify-start mb-3'">
                        <div x-bind:class="message.role === 'user' ? 'bg-blue-100 text-gray-800 rounded-lg py-2 px-4 max-w-[80%]' : 'bg-gray-100 text-gray-800 rounded-lg py-2 px-4 max-w-[80%]'">
                            <p x-text="message.contents[0].text"></p>
                        </div>
                    </div>
                </template>
                <div x-show="isLoading" class="flex justify-start mb-3">
                    <div class="bg-gray-100 text-gray-800 rounded-lg py-2 px-4">
                        <div class="flex space-x-1">
                            <div class="w-2 h-2 bg-gray-500 rounded-full animate-bounce"></div>
                            <div class="w-2 h-2 bg-gray-500 rounded-full animate-bounce" style="animation-delay: 0.2s"></div>
                            <div class="w-2 h-2 bg-gray-500 rounded-full animate-bounce" style="animation-delay: 0.4s"></div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Chat Input -->
            <div class="border-t p-3">
                <div class="flex">
                    <input 
                        type="text" 
                        x-model="newMessage" 
                        placeholder="Type your message..." 
                        class="flex-1 border rounded-l-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                        x-bind:disabled="isLoading">
                    <button 
                        type="button" 
                        x-on:click="sendMessage"
                        class="bg-blue-600 hover:bg-blue-700 text-white rounded-r-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                        x-bind:disabled="isLoading || !newMessage.trim()">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>