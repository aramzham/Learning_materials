<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    @if (isEmpty)
    {
        <ListEmptyState OnLoad="LoadData" />
    }
    else
    {
        int imageIndex = 0;
        foreach (var item in Data)
        {
            <Card Data="item" ImageUrl="@images[imageIndex]" />
            imageIndex = imageIndex >= images.Length ? 0 : imageIndex + 1;
        }
    }
    <CardSkeleton IsLoading="IsLoading" />
</div>

@code {
    [Parameter]
    public List<CardData> Data { get; set; } = new List<CardData>();

    [Parameter]
    public bool IsLoading { get; set; } = false;

    private bool isEmpty => !Data.Any();

    [Parameter]
    public EventCallback OnLoad { get; set; }

    private void LoadData()
    {
        OnLoad.InvokeAsync();
    }

    private string[] images =
{
            "https://images.unsplash.com/photo-1562051036-e0eea191d42f?w=400&h=300&fit=crop",
            "https://images.unsplash.com/photo-1501346220112-1dbcb625301c?w=400&h=300&fit=crop",
