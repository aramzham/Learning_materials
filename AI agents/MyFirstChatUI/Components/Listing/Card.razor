<div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300 ease-in-out">
    <div class="h-48 bg-gray-200 overflow-hidden">
        <img src="@ImageUrl"
             alt="@Data.Title"
             class="w-full h-full object-cover"
             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
        <div class="w-full h-full bg-gray-300 flex items-center justify-center text-gray-500" style="display: none;">
            <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
            </svg>
        </div>
    </div>

    <div class="p-6">
        <h3 class="text-xl font-semibold text-gray-800 mb-2">@Data.Title</h3>
        <p class="text-gray-600 text-sm mb-4 leading-relaxed">@Data.Description</p>

        @if (Data.Tags.Any())
        {
            <div class="flex flex-wrap gap-2">
                @foreach (var tag in Data.Tags)
                {
                    <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full font-medium">
                        @tag
                    </span>
                }
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public CardData Data { get; set; } = new();

    [Parameter] public string ImageUrl { get; set; } = "";
}
